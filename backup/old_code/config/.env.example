# OctoPrint 設定
OCTOPRINT_HOST=192.168.1.100
OCTOPRINT_PORT=80
OCTOPRINT_API_KEY=your_api_key_here

# ロボット設定
ROBOT_PORT=/dev/ttyUSB0
ROBOT_BAUDRATE=115200

# グリッパー設定
GRIPPER_PORT=/dev/ttyUSB1
GRIPPER_SLAVE_ADDRESS=1
GRIPPER_BAUDRATE=38400

# ディスペンサー設定
DISPENSER_GPIO_PIN=17

# カメラ設定
CAMERA_DEVICE_ID=0

# Webアプリ設定
WEB_HOST=0.0.0.0
WEB_PORT=8000

# ログレベル
LOG_LEVEL=INFO
